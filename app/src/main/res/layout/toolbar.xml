<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    android:background="@drawable/bgcontent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/searchItem"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:focusable="false"
        android:layout_weight="0.6"
        android:layout_marginRight="50dp"
        android:hint="Seach to joeaLagi"
        android:fontFamily="@font/timeburnernormal"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/searchicon2"
        android:background="@drawable/groundedittext"

        />
    <ImageView
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_weight="0.2"
        android:layout_margin="5dp"
        android:src="@drawable/iconmenu"/>
</LinearLayout>
</android.support.v7.widget.Toolbar>